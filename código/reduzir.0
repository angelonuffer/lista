reduzir = { lista função } =>
  | lista[.] == 1 = lista[0]
  | lista[.] == 2 = função([
    lista[0]
    lista[1]
  ])
  | (
    _lista = lista
    _função = função
    reduzir({
      lista: [
        _função([
          _lista[0]
          _lista[1]
        ])
        ..._lista[2:]
      ]
      função: _função
    })
  )

reduzir